{
    /** ------------ VsCode Configurations ------------ **/
    "extensions.autoCheckUpdates": false,
    "extensions.autoUpdate": false,
    "update.mode": "manual",
    /** ------------ Window Configurations ------------ **/
    "window.commandCenter": false,
    "window.menuBarVisibility": "compact",
    "workbench.activityBar.iconClickBehavior": "focus",
    /** ------------ Workbench Configurations ------------ **/
    "workbench.settings.applyToAllProfiles": [
        "explorer.openEditors.visible",
        "editor.fontFamily",
        "editor.fontSize",
        "editor.fontWeight",
        "editor.lineHeight",
        "editor.letterSpacing",
        "editor.lineNumbers",
        "editor.folding",
        "editor.glyphMargin",
        "editor.guides.indentation",
        "editor.scrollbar.horizontal",
        "editor.unicodeHighlight.ambiguousCharacters",
        "editor.unicodeHighlight.invisibleCharacters",
        "editor.minimap.enabled",
        "editor.minimap.renderCharacters",
        "editor.wordWrap",
        "editor.stickyScroll.enabled",
        "editor.tabSize",
        "multiDiffEditor.experimental.enabled",
        "editor.formatOnSave",
        "editor.cursorBlinking",
        "editor.cursorSmoothCaretAnimation",
        "editor.cursorStyle",
        "editor.fontLigatures",
        "editor.accessibilitySupport",
        "terminal.integrated.cursorBlinking",
        "terminal.integrated.fontFamily",
        "terminal.integrated.fontSize",
        "terminal.integrated.enableMultiLinePasteWarning",
        "terminal.integrated.cursorStyle",
        "files.associations",
        "json.schemas",
        "[php]",
        "bladeFormatter.format.sortTailwindcssClasses",
        "bladeFormatter.format.wrapLineLength"
    ],
    "workbench.colorCustomizations": {
        "inlineparameters.annotationBackground": "#282A3600",
        "inlineparameters.annotationForeground": "#7b82af",
        "scrollbar.shadow": "#24292e00"
    },
    "workbench.iconTheme": "Monokai Pro (Filter Octagon) Icons",
    "workbench.productIconTheme": "fluent-icons",
    "workbench.colorTheme": "Monokai Pro (Filter Octagon)",
    "workbench.activityBar.location": "bottom",
    "workbench.editorLargeFileConfirmation": 10024,
    "workbench.tree.indent": 15,
    "workbench.startupEditor": "none",
    "workbench.editor.empty.hint": "hidden",
    "workbench.editor.showTabs": "single",
    "workbench.editor.limit.enabled": true,
    "workbench.editor.limit.perEditorGroup": true,
    "workbench.editor.limit.value": 5,
    "workbench.layoutControl.enabled": false,
    "workbench.sideBar.location": "right",
    "workbench.statusBar.visible": false,
    "workbench.editor.labelFormat": "short",
    /** ------------ Explorers Configurations ------------ **/
    "explorer.openEditors.visible": 5,
    "explorer.autoReveal": false,
    "explorer.compactFolders": false,
    "explorer.fileNesting.patterns": {
        "*.ts": "${capture}.js",
        "*.js": "${capture}.js.map, ${capture}.min.js, ${capture}.d.ts",
        "*.jsx": "${capture}.js",
        "*.tsx": "${capture}.ts",
        "tsconfig.json": "tsconfig.*.json",
        "package.json": "package-lock.json, yarn.lock, pnpm-lock.yaml, bun.lockb",
        "*.sqlite": "${capture}.${extname}-*",
        "*.db": "${capture}.${extname}-*",
        "*.sqlite3": "${capture}.${extname}-*",
        "*.db3": "${capture}.${extname}-*",
        "*.sdb": "${capture}.${extname}-*",
        "*.s3db": "${capture}.${extname}-*"
    },
    /** ------------ Breadcrumbs Configurations ------------ **/
    "breadcrumbs.enabled": false,
    "breadcrumbs.symbolPath": "off",
    "breadcrumbs.filePath": "off",
    "breadcrumbs.showFiles": false,
    /** ------------ Editor Settings ------------ **/
    "editor.fontFamily": "'JetBrains Mono'",
    "editor.fontSize": 15,
    "editor.fontWeight": 400,
    "editor.lineHeight": 30,
    "editor.letterSpacing": 0.4,
    "editor.lineNumbers": "on",
    "editor.folding": true,
    "editor.glyphMargin": true,
    "editor.guides.indentation": true,
    "editor.scrollbar.horizontal": "hidden",
    "editor.unicodeHighlight.ambiguousCharacters": false,
    "editor.unicodeHighlight.invisibleCharacters": false,
    "editor.minimap.enabled": false,
    "editor.minimap.renderCharacters": false,
    "editor.wordWrap": "off",
    "editor.stickyScroll.enabled": false,
    "editor.tabSize": 4,
    "multiDiffEditor.experimental.enabled": true,
    "editor.formatOnSave": true,
    "editor.cursorBlinking": "smooth",
    "editor.cursorSmoothCaretAnimation": "on",
    "editor.cursorStyle": "line-thin",
    "editor.fontLigatures": true,
    "editor.accessibilitySupport": "off",
    /** ------------ Terminal Settings ------------ **/
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.fontFamily": "'JetBrains Mono'",
    "terminal.integrated.fontSize": 14,
    "terminal.integrated.enableMultiLinePasteWarning": "always",
    "terminal.integrated.cursorStyle": "line",
    /** ------------ Php Intelephense ------------ **/
    "files.associations": {
        "*.module": "php",
        "*.f7": "html",
        "*.php": "php",
        "*.blade.php": "blade"
    },
    "json.schemas": [],
    "[php]": {
        "editor.defaultFormatter": "bmewburn.vscode-intelephense-client"
    },
    /** ------------ Laravel Blade Formater ------------ **/
    "bladeFormatter.format.sortTailwindcssClasses": true,
    "bladeFormatter.format.wrapLineLength": 250
}
